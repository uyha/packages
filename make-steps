#!/usr/bin/env bash

set -euo pipefail

package-fetch() {
  if ! [[ -d "${src_dir:=$(mktemp -d)}" ]]; then
    mkdir -p "$src_dir"
  fi
  wget -O - "$url" | tar --${archive_format:-xz} -xf - -C "$src_dir" --strip-components=1
}

package-configure() {
  ./configure --prefix="$install_dir"
}

package-build() {
  make -j$(nproc)
}

package-install() {
  rm -rf "$install_dir"

  make install -j$(nproc)
}

package-clean() {
  rm -rf "$src_dir"
}

